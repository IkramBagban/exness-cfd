# Production Environment Variables for Docker Compose
# Copy this to .env.production and update with your production values

# Database Configuration
POSTGRES_DB=exness_trading
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# Backend API Configuration
BACKEND_PORT=3000
JWT_SECRET=your_secure_jwt_secret_key_here

# WebSocket Server Configuration
WS_PORT=8080

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_URL=https://yourdomain.com

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# GitHub Container Registry (for CI/CD)
GITHUB_REPOSITORY=ikrambagban/exness-cdf
IMAGE_TAG=latest

# Node Environment
NODE_ENV=production
